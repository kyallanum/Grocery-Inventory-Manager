<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Grocery_Inventory_Manager.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Grocery_Inventory_Manager"
    Shell.FlyoutBehavior="Flyout">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />

    <ShellContent
        Title="Inventory"
        ContentTemplate="{DataTemplate local:Inventory}"
        Route="Inventory" />

    <ShellContent
        Title="Profile"
        ContentTemplate="{DataTemplate local:Profile}"
        Route="Profile" />

    <ShellContent
        Title="About"
        ContentTemplate="{DataTemplate local:AboutPage}"
        Route="AboutPage" />

</Shell>
